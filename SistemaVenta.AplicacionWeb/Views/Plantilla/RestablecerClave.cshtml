
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Restablecer Clave</title>
    <style>
        body {
            background-color: #EDF6FF;
            height: 80vh; /* Altura del viewport */
            display: flex; /* Habilitar centrado vertical */
            justify-content: center; /* Centrar horizontalmente */
            align-items: center; /* Centrar verticalmente */
        }

        .Contenedor {
            width: 400px;
            border-radius: 10px;
            margin: auto;
            background-color: #fff;
            box-shadow: 0px 0px 20px #DEDEDE;
            padding: 40px;
        }

        .AvisoFooter {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="Contenedor" style="font-family: 'Segoe UI'">
        <table style="width:100%">
            <tr>
                <td align="center" colspan="2">
                    <h2 style="color:#004DAF">Estado de contraseña</h2>
                </td>
            </tr>
            <tr>
                <td align="left" colspan="2">
                    <p>Su contraseña fue restablecida:</p>
                </td>
            </tr>
            <tr>
                <td><h4 style="color:#004DAF;margin:2px">Nueva Contraseña:</h4></td>
                <td>@ViewData["Clave"]</td>
            </tr>
        </table>
        <div class="AvisoFooter" style="background-color:#FFE1CE;padding:15px;margin-top:15px;margin-bottom:15px">
            <p style="margin:0px;color: #F45E00;">Le recomendamos cambiar la contraseña una vez inicie sesión.</p>
        </div>
    </div>
    <br />
    <br />
</body>
</html>